                    @foreach (var service in Model.Services)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="services-item">
                            <div class="service-img d-flex justify-content-center">
                                <img src="/assets/images/@service.Image" alt="">
                            </div>

                            <div class="service-header d-flex justify-content-center">
                                <h3>@service.Name</h3>
                            </div>

                            <div class="service-desc d-flex justify-content-center">
                                <p>@service.Description</p>
                            </div>
                        </div>
                    </div>          
                }
                </div>
            </div>
        </section>
    </main>